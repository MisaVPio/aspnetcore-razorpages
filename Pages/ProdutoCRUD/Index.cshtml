@page
@model AspNetCoreWebApp.Pages.ProdutoCRUD.IndexModel

@{
    ViewData["Title"] = "Listagem de Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Criar Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Estoque)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProdutoModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.IdProduto">Editar</a> |
                    <form class="d-inline-block" asp-page-handler="delete" asp-route-id="@item.IdProduto" method="post">
                        <button class="btn btn-danger btn-sm"
                                onclick="confirmarExclusao(this);" type="button">
                            Excluir
                        </button>
                    </form>
                    <a asp-page="./Delete" asp-route-id="@item.IdProduto">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}