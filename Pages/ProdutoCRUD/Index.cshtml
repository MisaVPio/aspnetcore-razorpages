@page
@model AspNetCoreWebApp.Pages.ProdutoCRUD.IndexModel

@{
    ViewData["Title"] = "Listagem de Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Criar Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoModel[0].Estoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProdutoModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdProduto">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.IdProduto">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdProduto">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
