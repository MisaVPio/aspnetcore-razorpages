@page
@model AspNetCoreWebApp.Pages.ProdutoCRUD.CreateModel

@{
    ViewData["Title"] = "Novo Produto";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoModel.Nome" class="control-label"></label>
                <input asp-for="ProdutoModel.Nome" class="form-control" />
                <span asp-validation-for="ProdutoModel.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoModel.Descricao" class="control-label"></label>
                <input asp-for="ProdutoModel.Descricao" class="form-control" />
                <span asp-validation-for="ProdutoModel.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoModel.Preco" class="control-label"></label>
                <input asp-for="ProdutoModel.Preco" class="form-control" />
                <span asp-validation-for="ProdutoModel.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoModel.Estoque" class="control-label"></label>
                <input asp-for="ProdutoModel.Estoque" class="form-control" />
                <span asp-validation-for="ProdutoModel.Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar à Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
