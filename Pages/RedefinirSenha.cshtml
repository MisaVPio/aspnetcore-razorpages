@page
@model AspNetCoreWebApp.Pages.RedefinirSenhaModel
@{
    ViewData["Title"] = "Redefinição de Senha";
}

<div class="row justify-content-center">
    <form class="form-signin align-self-center" method="post" asp-page="/RecuperarSenha">
        <h1 class="mt-5 mb-3 font-weight-normal">Redefinição de Senha</h1>

        <style type="text/css">
            .val-summary ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }
        </style>

        <div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>
        <input type="hidden" asp-for="Dados.Token"/>
        <input asp-for="Dados.Email" class="form-control" placeholder="Digite aqui seu email" required autofocus />
        <span asp-validation-for="Dados.Email" class="text-danger"></span>
        <input asp-for="Dados.Senha" class="form-control" placeholder="Digite aqui seu email" required autofocus />
        <span asp-validation-for="Dados.Senha" class="text-danger"></span>
        <input asp-for="Dados.ConfirmacaoSenha" class="form-control" placeholder="Digite aqui seu email" required autofocus />
        <span asp-validation-for="Dados.ConfirmacaoSenha" class="text-danger"></span>

        <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Redefinir Senha</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
 